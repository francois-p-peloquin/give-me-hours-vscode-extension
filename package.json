{
  "name": "give-me-hours",
  "displayName": "Give Me Hours",
  "description": "A command-line tool to list out hours worked based on git log hours in a working directory.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "give-me-hours.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "give-me-hours.openWelcome",
        "title": "Give Me Hours: Open Welcome Page"
      }
    ],
    "configuration": {
      "title": "Give Me Hours",
      "properties": {
        "giveMeHours.workingDirectory": {
          "type": "string",
          "default": "",
          "description": "The folder where the Give Me Hours script will run. Leave empty to use the current workspace folder."
        },
        "giveMeHours.duration": {
          "type": "string",
          "default": "1h",
          "description": "Maximum gap between commits (e.g., '1h', '30m', '90s')"
        },
        "giveMeHours.hoursRounding": {
          "type": "number",
          "default": 0.25,
          "description": "Round up hours to nearest increment (default: 0.25 = 15 minutes)"
        },
        "giveMeHours.paddingBefore": {
          "type": "number",
          "default": 0.5,
          "description": "Add time before each work session in hours (default: 0.5 = 30 minutes)"
        },
        "giveMeHours.words": {
          "type": "number",
          "default": 50,
          "description": "Maximum words in summary mode"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
